<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView_frount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="16sp"
            android:text="@string/frount_week" />

        <TextView
            android:id="@+id/textView_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textAlignment="center"
            android:text="@string/back_to_now" />

        <TextView
            android:id="@+id/textView_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textAlignment="textEnd"
            android:text="@string/next_week" />
    </LinearLayout>

    <com.zhuangfei.timetable.TimetableView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:id="@+id/id_timetableView"
        android:orientation="vertical">

    </com.zhuangfei.timetable.TimetableView>
</LinearLayout>